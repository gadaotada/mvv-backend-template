{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}